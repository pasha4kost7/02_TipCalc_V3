<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_TotalAmount"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:background="@color/lightGreen"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_TipTotal" />


    <TextView
        android:id="@+id/textView_TipTotal"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="35dp"
        android:background="@color/lightGreen"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_Bill"
        android:layout_width="141dp"
        android:layout_height="46dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"
        android:background="@color/lightGray"
        android:text=" Bill"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="415dp"
        android:layout_height="9dp"
        android:layout_marginTop="260dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Tip"
        android:layout_width="137dp"
        android:layout_height="47dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="45dp"
        android:background="@color/lightGray"
        android:text=" Tip (%)"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Bill" />

    <TextView
        android:id="@+id/tv_TipT"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:background="@color/lightGray"
        android:text=" Tip ($)"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_Total"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="47dp"
        android:background="@color/lightGray"
        android:text=" Total"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_TotalAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Tip" />

    <EditText
        android:id="@+id/editText_EnterBillAmount"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Enter Bill Amount"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_EnterTipAmount"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Enter Tip amount"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_Tip"
        app:layout_constraintTop_toBottomOf="@+id/editText_EnterBillAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>
